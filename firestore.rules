rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Rules collection - allow read/write for authenticated users only
    match /rules/{ruleId} {
      allow read, write: if isAuthenticated();
    }

    // Dictionaries collection - allow read/write for authenticated users only
    match /dictionaries/{dictionaryId} {
      allow read, write: if isAuthenticated();
    }

    // Config collection - allow read/write for authenticated users only
    match /config/{configId} {
      allow read, write: if isAuthenticated();
    }

    // Skills collection - allow read/write for authenticated users only
    match /skills/{skillId} {
      allow read, write: if isAuthenticated();
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
